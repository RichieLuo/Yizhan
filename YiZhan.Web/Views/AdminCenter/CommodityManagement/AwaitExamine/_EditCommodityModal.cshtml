@{
    Layout = null;
}
@using YiZhan.Entities.BusinessManagement.Commodities
@using YiZhan.ViewModels.BusinessManagement
@model YZ_CommodityVM

<form class="form-horizontal" id="editCommodityForm" action="../../AdCommodities/SaveEditCommodity" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Name" class="col-sm-4 control-label">商品名称：</label>
        <div class="col-sm-8">
            <input class="form-control yzInput" disabled="disabled" name="Name" value="@Model.Name" />
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="col-sm-4 control-label">商品描述：</label>
        <div class="col-sm-8">
            <textarea class="form-control yzInput" disabled="disabled" name="Description">@Model.Description</textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="State" class="col-sm-4 control-label">是否通过：</label>
        <div class="col-sm-8">
            <input type="radio" name="State" class="state" value="@YZ_CommodityState.IsReject">不通过
            <input type="radio" name="State" class="state" value="@YZ_CommodityState.OnSale">通过
        </div>
    </div>
    <div class="form-group">
        <label for="ExamineDescription" class="col-sm-4 control-label">失败描述：</label>
        <div class="col-sm-8">
            <textarea class="form-control yzInput" name="ExamineDescription" placeholder="审核不通过时请填写..."></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label"></label>
        <div class="col-sm-8">
            <p id="adCommonCommodityModalTip"></p>
        </div>
    </div>
</form>
