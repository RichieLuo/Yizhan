@{
    Layout = null;
}
@using YiZhan.ViewModels.ApplicationOrganization
@model ApplicationUserVM
<!-- 模态框（Modal） -->
<div class="modal fade yzModalCenter" id="changeMyProfileModal" tabindex="-1" role="dialog"
     aria-labelledby="changeMyProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="changeMyProfileModalLabel">
                    完善信息
                </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" action="../../Account/SaveChangeProfile" method="post" role="form" id="ChangeProfileForm">
                     @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="name" class="col-sm-4 control-label">昵称：</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control borderRadiusNone" name="Name" placeholder="昵称" value="@Model.Name" maxlength="8">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="MobileNumber" class="col-sm-4 control-label">手机号码：</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="MobileNumber" placeholder="手机号码" value="@Model.MobileNumber" maxlength="11">
                        </div>
                    </div>
                      <div class="form-group">
                        <label for="QQNumber" class="col-sm-4 control-label">QQ：</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="QQNumber" placeholder="QQ号码" value="@Model.QQNumber" maxlength="11">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="EMail" class="col-sm-4 control-label">电子邮件：</label>
                        <div class="col-sm-6">
                            <input type="email" class="form-control" name="EMail" placeholder="电子邮件" value="@Model.EMail" maxlength="30" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Description" class="col-sm-4 control-label">个性签名：</label>
                        <div class="col-sm-6">
                            <input type="email" class="form-control" name="Description" placeholder="个性签名" value="@Model.Description" maxlength="14">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-6">
                            <button type="button" class="btn leftSaveBtn" id="ChangeProfileSaveBtn">保存修改</button>
                            <button type="button" class="btn yzFormBtn" id="ModalCloseBtn" data-dismiss="modal" aria-hidden="true" data-target="#changeMyProfileModal">关闭</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer text-center">
                <div class="text-center">
                    <a href="../../Account/UserCenter" title="易站-校园二手交易平台">
                        易站-用户中心
                    </a>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal -->
</div>