@{
    Layout = null;
}
@using YiZhan.ViewModels.ApplicationOrganization
@model ApplicationUserVM
<div class="area-right-head">
    <h3 class="user-right-head-title">个人信息</h3>
</div>
<div class="area-right-container">
    <div id="userProfileArea" class="userProfileArea">
        <div class="userProfileTop row">
            <div class="col-sm-2 text-center"><img src="@Model.AvatarPath" alt="" /></div>
            <div class="col-sm-10">
                <h4>我的用户名：<span class="myUserName">@Model.UserName</span></h4>
                <h4>上次登录IP: <span class="lastLoginIp">@ViewBag.LastLoginIp</span></h4>
            </div>
        </div>
        <div class="userProfileBottom">
            <form class="form-horizontal" action="../../Account/SaveChangeProfile" method="post" role="form" id="ChangeProfileFormTwo">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="name" class="col-sm-3 control-label">昵称：</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control borderRadiusNone" name="Name" placeholder="昵称" value="@Model.Name" maxlength="8">
                    </div>
                </div>
                <div class="form-group">
                    <label for="MobileNumber" class="col-sm-3 control-label">手机号码：</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="MobileNumber" placeholder="手机号码" value="@Model.MobileNumber" maxlength="11">
                    </div>
                </div>
                <div class="form-group">
                    <label for="QQNumber" class="col-sm-3 control-label">QQ：</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="QQNumber" placeholder="QQ号码" value="@Model.QQNumber" maxlength="11">
                    </div>
                </div>
                <div class="form-group">
                    <label for="EMail" class="col-sm-3 control-label">电子邮件：</label>
                    <div class="col-sm-6">
                        <input type="email" class="form-control" name="EMail" placeholder="电子邮件" value="@Model.EMail" maxlength="30" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Description" class="col-sm-3 control-label">个性签名：</label>
                    <div class="col-sm-6">
                        <input type="email" class="form-control" name="Description" placeholder="个性签名" value="@Model.Description" maxlength="14">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-6">
                        <button type="button" class="btn leftSaveBtn" id="ChangeProfileSaveTwoBtn">保存修改</button>
                        <button type="reset" class="btn yzFormBtn">清空</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    window.onload = function () {
       
    }
</script>