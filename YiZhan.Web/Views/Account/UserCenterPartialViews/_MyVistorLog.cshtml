@{
    Layout = null;
}
@using YiZhan.ViewModels.BusinessManagement.User
@model List<YZ_UserVisitorLogsVM>
@{
    var count = 16;
    var dataCount = Model.Count;
    var loopCount = dataCount == 0 ? count - 1 : (count - dataCount);
}
<div class="area-right-head">
    <h3 class="user-right-head-title">我的足迹</h3>
</div>
<div class="area-right-container">
    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr style="height:40px">
                    <th style="width:59px;" valign="middle">序号</th>
                    <th style="width:100px;" valign="middle">商品名称</th>
                    <th style="width:100px;" valign="middle">商品图</th>
                    <th style="width:100px;" valign="middle">商品描述</th>
                    <th style="width:120px;" valign="middle">浏览时间</th>
                    <th style="width:80px;" valign="middle">数据操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderNumber</td>
                        <td>@item.CommodityName</td>
                        <td><img src="@item.CommodityCover" alt="商品图片" style="width:100px;height:80px;" /></td>
                        <td>
                            <span class="strSubArea showPartText shw" style="width: 100%;" title="@item.Description">
                                @item.Description
                            </span>
                        </td>
                        <td>@item.LookTime.ToString("yyyy-MM-dd HH:MM:ss")</td>
                        <td>
                            <div class="btn-group btn-group-xs" role="group" aria-label="...">
                                <button type="button" class="btn btn-default deleteVistorLog" value="@item.Id">删除</button>
                            </div>
                        </td>
                    </tr>
                }
                @for (int i = 0; i < loopCount; i++)
                {
                    <tr>
                        <td>　</td>
                        <td>　</td>
                        <td>　</td>
                        <td>　</td>
                        <td>　</td>
                        <td>　</td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.Count <= 0)
        {
            <div class="center-block text-center" style="font-size:16px;"> 您还没有任何浏览记录。</div>
        }
    </div>
</div>
