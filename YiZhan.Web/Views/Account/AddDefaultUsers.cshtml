@{
    Layout = "_LayoutForIndex";
    ViewData["Title"] = "添加默认用户";
}
<style>
    .btnArea {
        width: 300px;
    }

    .btnMargin {
        margin: 0 5px;
    }
</style>
<div class="container text-center" style="height:570px">
    <div class="container-fluid">
        <div class="row" style="margin-top:200px">
            <div class="col-lg-12">
                <h4 class="yzError">@ViewBag.Message</h4>
                <hr style="margin:20px auto;width:500px" />
                @if (ViewBag.PassError)
                {
                    <form class="form-horizontal" action="../../Account/AddDefaultUsers" method="post" name="AddDefaultForm">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="col-xs-4"></div>
                            <div class="col-xs-4">
                                <div class="input-group">
                                       <span class="input-group-addon" id="sizing-addon2">密码验证</span>
                                    <input type="password" name="Pass" class="form-control yzInput" placeholder="请输入密码" required />
                                    <span class="input-group-btn">
                                        <button class="btn leftSaveBtn" type="submit">立即添加</button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-xs-4"></div>
                        </div>                      
                    </form>
                }
                else
                {
                    <div class="btn-group">
                        <a href="/" class="btn btn-success btnMargin">返回首页</a>
                        <a href="../../Account/Index" class="btn btn-info btnMargin">前往登录</a>
                        <a href="../../Account/Index?state=register" class="btn btn-warning btnMargin">前往注册</a>
                        <a href="../../Admin/Login" class="btn btn-danger btnMargin">管理中心</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
