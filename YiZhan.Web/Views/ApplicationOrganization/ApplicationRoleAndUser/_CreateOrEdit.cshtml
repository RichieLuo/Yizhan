@model YiZhan.ViewModels.ApplicationOrganization.ApplicationRoleVM

<div>
    <h2 class="sub-header">管理 @Model.DisplayName 数据</h2>
</div>

<div id="updateCreateOrEdit_@Model.Id">
    <div class="nncqDefaultArea" data-text="" id="">
        <form action="../../ApplicationRoleAndUser/SaveApplicationRole"
              method="post"
              id="ApplicationRoleCreateOrEditForm"
              data-ajax-update='#updateCreateOrEdit_@Model.Id'
              data-ajax-mode='replace'
              data-ajax='true'>

            <input type="hidden" id="Id" name="Id" value="@Model.Id" />
            <input type="hidden" id="IsNew" name="IsNew" value="@Model.IsNew.ToString()" />
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="Name" class="col-sm-3 control-label">名称：</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="Name" id="Name" placeholder="请输入名称" value="@Model.Name" data-error="不能为空。" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="URL" class="col-sm-3 control-label">显示名称：</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="DisplayName" id="DisplayName" placeholder="请输入链接地址URL" value="@Model.DisplayName" data-error="不能为空。" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="SortCode" class="col-sm-3 control-label">业务编码：</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="SortCode" id="SortCode" placeholder="请输入业务编码" value="@Model.SortCode" data-error="不能为空。" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Description" class="col-sm-3 control-label">简要描述：</label>
                    <div class="col-sm-9">
                        <textarea class="form-control" rows="4" name="Description" id="EntityVM_Description">@Model.Description</textarea>
                    </div>
                </div>
            </div>
            <hr class="bg-red" />
            <div>
                <button type="button" class="btn" onclick="postApplicationRoleCreateOrEditForm()"><span class=""></span> 提交数据</button>
                <button type="reset" class="btn"><span class=""></span> 重置 </button>
            </div>
        </form>
    </div>
</div>

<div id="createOrSaveErrorMessage" style="color:red"></div>


